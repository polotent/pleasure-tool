{
  "compilerOptions": {
    "target": "ES2022",
    "sourceMap": true,
    /* Modules */
    "moduleResolution": "node",
    "module": "node16",
    "rootDir": ".",
    "resolveJsonModule": true,
    /* Emit */
    "outDir": "./lib",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "skipLibCheck": false
  },
}
